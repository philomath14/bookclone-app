<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/show.css">
<link rel="stylesheet" href="/stylesheets/starheart-rating.css">
<div class="container">
  <div class="book-wrapper">
    <div class="row justify-content-center">
      <div class="col-lg-4 mb-3">
        <div class="card h-100 mb-3" style="width: 18rem;">
          <img src="<%=book.image%>" class="card-img-top" alt="Cover Not Available">
          <div class="card-body">
           
            <h6 class="card-title text-center">Average rating: <%=book.avgRating%></h6>
            <h6 class="card-subtitle text-center">Liked by <%=book.liked%>%</h6>
      
          </div>
      </div>
      </div>
      <div class="col-lg-8 mb-3">
        <div class="card h-100 w-100 mb-3" style="width: 18rem;">
          <div class="card-body">
            <h3 class="card-title text-muted"><%=book.title%> <span>by</span> <%=book.author%> </h3>
            <h4><%=book.series%></h4>
            <p id="year">Published: <%=book.year%> | Pages: <%=book.pages%> </p>
           
            <h6><%=book_genres%></h6>
            <h4 class="card-title">Description</h4>
            <p class="card-body"><%=book.description%></p>
           
          </div>
        </div>
      </div>
    </div>
  </div>
 
  <div class="row my-3">
    <div class="col-6 offset-4">
      <%if(currentUser){%>
      <h2>Leave a Review</h2>
      <form action="/books/<%=book._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate >
          <div class="my-3">
            <fieldset class="starability-heart">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          
          <div class="form-group mb-3">
              <label class="form-label" for="body">Review</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
              <div class="invalid-feedback">
                You cannot submit an empty review!
                </div>
          </div>
          
          <button class="btn btn-success">Submit</button>
      </form>
      <%}%>
      <% for(let review of book.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%=review.author.username%></h5>
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%=review.rating%> stars
              </p>
              <p>Review: <%=review.body%></p>
            </div>
          </div>
          <%if(currentUser && review.author.equals(currentUser._id)){%>
          <form action="/books/<%=book._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger mb-3">Delete</button>
          </form>
          <% } %>
        <%}%>
    </div>
  </div>
 
</div>

<script src="/javascripts/show.js"></script>




